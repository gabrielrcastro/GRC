@page

@model GRC.Application.Pages.Product.IndexModel
@{
    ViewData["Title"] = "Produtos";
    Layout = "_Layout";
}
<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a href="@Url.Page("./Create")" class="btn btn-primary">
                    <span title="Cadastrar Novo Produto" class="glyphicon glyphicon-plus-sign"></span> Cadastrar Novo Produto
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().CategoryId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td align="right">
                        <a href="@Url.Page("./Edit", new { id = @item.Id })" title="Edit" class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a href="@Url.Page("./Details", new { id = @item.Id })" title="Details" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span></a>
                        <a href="@Url.Page("./Delete", new { id = @item.Id })" title="Delete" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

