@page "{id:int}"
@model GRC.Application.Pages.Product.DetailsModel
@{
    ViewData["Title"] = "Visualizar Produto";
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>

<div class="form-horizontal">
    <hr />
    @Html.HiddenFor(model => model.Product.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Product.Name, new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.Product.Name, new { @disabled = "disabled", @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Product.CategoryId, new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.Product.Category.Name, new { @disabled = "disabled", @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Product.Price, new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.Product.Price, new { @disabled = "disabled", @class = "form-control" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href="@Url.Page("./Edit", new { id = @Model.Product.Id })" class="btn btn-warning">Editar</a>
            <a href="@Url.Page("./Index")" class="btn btn-info">Voltar</a>
        </div>
    </div>
</div>
