@page "{id:int}"
@model GRC.Application.Pages.Category.DetailsModel
@{
    ViewData["Title"] = "Visualizar Categoria";
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>

<div class="form-horizontal">
    <hr />
    @Html.HiddenFor(model => model.Category.Id)

    <vc:summary />
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayNameFor(model => model.Category.Name)
            @Html.DisplayFor(model => model.Category.Name)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href="@Url.Page("./Edit", new { id = @Model.Category.Id })" class="btn btn-warning">Editar</a>
            <a href="@Url.Page("./Index")" class="btn btn-info">Voltar</a>
        </div>
    </div>
</div>
